<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <h1>Create a new movie</h1>
            <hr>

            <form action="/movies/create" method="POST">
                <div class="mb-3 mt-5">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>

                <div class="mb-3 ">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>

                <div class="mb-3 ">
                    <label for="celebrities" class="form-label">Choose celebrities:</label>
                    <select class="form-select" name="cast" multiple>
                        {{#each celebrity}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Create a new movie</button>
                <a class="btn btn-dark ml-3" href="/">Back to menu</a>
            </form>

        </div>
    </div>
</div>