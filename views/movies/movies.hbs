<div class="container">
    <h2>movies in DataBase</h2>
    <hr>
    <div class="row">
        {{#each movie}}
        <div class="card m-2" style="width: 18rem;">
            <div class="card-body">
                <hr>
                <h5 class="card-title">{{title}}</h5>
                <a href="/movies/{{_id}}">See in detail</a>
                <hr>
                <form action="/movies/{{_id}}/delete" method="POST" style="display: inline;">
                    <input type="submit" value="delete" class="btn btn-sm btn-danger">
                </form>
                <a class="btn btn-sm btn-warning ml-3" href="/movies/{{_id}}/edit">Edit</a>
            </div>
        </div>
        {{/each}}
    </div>
    <a class="btn btn-dark mt-3" href="/">Back to menu</a>
</div>